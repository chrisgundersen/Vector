@page "/producer/corrections"
@using MediatR
@using Vector.Application.Submissions.Queries
@using Vector.Application.Submissions.DTOs
@using Vector.Application.Common.Interfaces
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Producer")]
@inject IMediator Mediator
@inject ICurrentUserService CurrentUserService

<PageTitle>Data Corrections - Vector</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3">Data Corrections</h1>
            <p class="text-muted mb-0">Review and track correction requests for your submissions</p>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Status</label>
                    <select class="form-select" @bind="_selectedStatus" @bind:after="LoadDataAsync">
                        <option value="">All Statuses</option>
                        <option value="Pending">Pending</option>
                        <option value="UnderReview">Under Review</option>
                        <option value="Approved">Approved</option>
                        <option value="Rejected">Rejected</option>
                        <option value="Applied">Applied</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    @if (_isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (_error is not null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @_error
        </div>
    }
    else
    {
        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-warning text-dark h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-subtitle mb-2 opacity-75">Pending</h6>
                                <h2 class="card-title mb-0">@_corrections.Count(c => c.Status == "Pending")</h2>
                            </div>
                            <div class="display-6 opacity-50">
                                <i class="bi bi-hourglass-split"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-subtitle mb-2 opacity-75">Under Review</h6>
                                <h2 class="card-title mb-0">@_corrections.Count(c => c.Status == "UnderReview")</h2>
                            </div>
                            <div class="display-6 opacity-50">
                                <i class="bi bi-search"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-subtitle mb-2 opacity-75">Approved</h6>
                                <h2 class="card-title mb-0">@_corrections.Count(c => c.Status == "Approved" || c.Status == "Applied")</h2>
                            </div>
                            <div class="display-6 opacity-50">
                                <i class="bi bi-check-circle"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-danger text-white h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-subtitle mb-2 opacity-75">Rejected</h6>
                                <h2 class="card-title mb-0">@_corrections.Count(c => c.Status == "Rejected")</h2>
                            </div>
                            <div class="display-6 opacity-50">
                                <i class="bi bi-x-circle"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Corrections Table -->
        <div class="card">
            <div class="card-body p-0">
                @if (_filteredCorrections.Count == 0)
                {
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-pencil-square display-4 mb-3 d-block"></i>
                        @if (string.IsNullOrEmpty(_selectedStatus))
                        {
                            <p>No data correction requests found.</p>
                        }
                        else
                        {
                            <p>No @_selectedStatus.ToLower() correction requests found.</p>
                        }
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Submission</th>
                                    <th>Insured</th>
                                    <th>Type</th>
                                    <th>Field</th>
                                    <th>Current Value</th>
                                    <th>Proposed Value</th>
                                    <th>Status</th>
                                    <th>Requested</th>
                                    <th>Notes</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var correction in _filteredCorrections)
                                {
                                    <tr class="@GetRowClass(correction.Status)">
                                        <td>
                                            <a href="/producer/submissions/@correction.SubmissionId" class="text-decoration-none fw-semibold">
                                                @correction.SubmissionNumber
                                            </a>
                                        </td>
                                        <td>@correction.InsuredName</td>
                                        <td>@FormatEnumName(correction.Type)</td>
                                        <td><strong>@correction.FieldName</strong></td>
                                        <td><code class="text-muted">@(correction.CurrentValue ?? "-")</code></td>
                                        <td><code>@correction.ProposedValue</code></td>
                                        <td>
                                            <span class="badge @GetStatusBadgeClass(correction.Status)">
                                                @FormatStatus(correction.Status)
                                            </span>
                                        </td>
                                        <td>@correction.RequestedAt.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(correction.ReviewNotes))
                                            {
                                                <span class="text-muted" title="@correction.ReviewNotes">
                                                    <i class="bi bi-chat-text"></i>
                                                    @(correction.ReviewNotes.Length > 30 ? correction.ReviewNotes[..30] + "..." : correction.ReviewNotes)
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <a href="/producer/submissions/@correction.SubmissionId" class="btn btn-sm btn-outline-primary">
                                                View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>

        <!-- Help Section -->
        @if (_filteredCorrections.Any(c => c.Status == "Pending" || c.Status == "UnderReview"))
        {
            <div class="card mt-4 border-info">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>About Data Corrections
                    </h5>
                </div>
                <div class="card-body">
                    <p class="mb-2">Data corrections allow you to request changes to submission data that was extracted incorrectly or needs updating.</p>
                    <ul class="mb-0">
                        <li><strong>Pending:</strong> Your request has been submitted and is awaiting review.</li>
                        <li><strong>Under Review:</strong> An underwriter is currently reviewing your request.</li>
                        <li><strong>Approved:</strong> The correction has been approved and will be applied.</li>
                        <li><strong>Applied:</strong> The correction has been applied to the submission.</li>
                        <li><strong>Rejected:</strong> The correction was not approved. Check the notes for details.</li>
                    </ul>
                </div>
            </div>
        }
    }
</div>

@code {
    private bool _isLoading = true;
    private string? _error;
    private List<ProducerCorrectionDto> _corrections = [];
    private string _selectedStatus = "";

    private List<ProducerCorrectionDto> _filteredCorrections =>
        string.IsNullOrEmpty(_selectedStatus)
            ? _corrections
            : _corrections.Where(c => c.Status == _selectedStatus).ToList();

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        try
        {
            _isLoading = true;
            _error = null;

            Guid? producerId = null;
            if (Guid.TryParse(CurrentUserService.UserId, out var id))
            {
                producerId = id;
            }

            if (producerId.HasValue)
            {
                var result = await Mediator.Send(new GetProducerCorrectionsQuery(producerId.Value));
                _corrections = result.ToList();
            }
            else
            {
                _corrections = [];
            }
        }
        catch (Exception ex)
        {
            _error = $"Failed to load corrections: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private static string GetRowClass(string status) => status switch
    {
        "Pending" => "table-warning",
        "Rejected" => "table-danger",
        _ => ""
    };

    private static string GetStatusBadgeClass(string status) => status switch
    {
        "Pending" => "bg-warning text-dark",
        "UnderReview" => "bg-info",
        "Approved" => "bg-success",
        "Rejected" => "bg-danger",
        "Applied" => "bg-primary",
        _ => "bg-secondary"
    };

    private static string FormatStatus(string status) => status switch
    {
        "UnderReview" => "Under Review",
        _ => status
    };

    private static string FormatEnumName(string name) =>
        string.Concat(name.Select((c, i) => i > 0 && char.IsUpper(c) ? " " + c : c.ToString()));
}
