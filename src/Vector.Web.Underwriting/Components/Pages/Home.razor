@page "/"
@using MediatR
@using Vector.Application.Submissions.DTOs
@using Vector.Application.Submissions.Queries
@inject IMediator Mediator
@attribute [Authorize]

<PageTitle>Underwriting Dashboard - Vector</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Underwriting Dashboard</h1>
        <span class="text-muted">@DateTime.Now.ToString("dddd, MMMM d, yyyy")</span>
    </div>

    @if (_loading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="card-subtitle mb-2 opacity-75">Pending Review</h6>
                                <h2 class="card-title mb-0">@_pendingCount</h2>
                            </div>
                            <i class="bi bi-inbox-fill fs-1 opacity-50"></i>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <a href="queue" class="text-white text-decoration-none">
                            View Queue <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card bg-warning text-dark h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="card-subtitle mb-2 opacity-75">In Progress</h6>
                                <h2 class="card-title mb-0">@_inProgressCount</h2>
                            </div>
                            <i class="bi bi-hourglass-split fs-1 opacity-50"></i>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <a href="my-work" class="text-dark text-decoration-none">
                            View My Work <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card bg-success text-white h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="card-subtitle mb-2 opacity-75">Quoted Today</h6>
                                <h2 class="card-title mb-0">@_quotedTodayCount</h2>
                            </div>
                            <i class="bi bi-check-circle-fill fs-1 opacity-50"></i>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <span class="text-white opacity-75">Last 24 hours</span>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card bg-info text-white h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="card-subtitle mb-2 opacity-75">Avg Response Time</h6>
                                <h2 class="card-title mb-0">@_avgResponseTime</h2>
                            </div>
                            <i class="bi bi-clock-fill fs-1 opacity-50"></i>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <span class="text-white opacity-75">Hours to first action</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Recent Submissions</h5>
                        <a href="queue" class="btn btn-sm btn-outline-primary">View All</a>
                    </div>
                    <div class="card-body p-0">
                        @if (_recentSubmissions.Count == 0)
                        {
                            <div class="text-center text-muted py-4">
                                <i class="bi bi-inbox fs-1"></i>
                                <p class="mt-2">No recent submissions</p>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Submission #</th>
                                            <th>Insured</th>
                                            <th>Underwriter</th>
                                            <th>Score</th>
                                            <th>Status</th>
                                            <th>Received</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var submission in _recentSubmissions)
                                        {
                                            <tr class="cursor-pointer" @onclick="() => ViewSubmission(submission.Id)">
                                                <td>
                                                    <a href="submissions/@submission.Id" class="text-decoration-none">
                                                        @submission.SubmissionNumber
                                                    </a>
                                                </td>
                                                <td>@submission.InsuredName</td>
                                                <td>@(submission.AssignedUnderwriterName ?? "Unassigned")</td>
                                                <td>
                                                    <span class="badge @GetScoreBadgeClass(submission.AppetiteScore)">
                                                        @(submission.AppetiteScore?.ToString() ?? "N/A")
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge @GetStatusBadgeClass(submission.Status)">
                                                        @submission.Status
                                                    </span>
                                                </td>
                                                <td>@submission.ReceivedAt.ToString("g")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="queue" class="btn btn-outline-primary">
                                <i class="bi bi-inbox me-2"></i>Review Next Submission
                            </a>
                            <a href="submissions" class="btn btn-outline-secondary">
                                <i class="bi bi-search me-2"></i>Search Submissions
                            </a>
                            <a href="my-work" class="btn btn-outline-secondary">
                                <i class="bi bi-person-workspace me-2"></i>View My Workload
                            </a>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Activity Summary</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Submissions Today
                                <span class="badge bg-primary rounded-pill">@_submissionsTodayCount</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Declined Today
                                <span class="badge bg-danger rounded-pill">@_declinedTodayCount</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Info Requests Pending
                                <span class="badge bg-warning rounded-pill">@_infoRequestsPendingCount</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private bool _loading = true;
    private int _pendingCount;
    private int _inProgressCount;
    private int _quotedTodayCount;
    private string _avgResponseTime = "N/A";
    private int _submissionsTodayCount;
    private int _declinedTodayCount;
    private int _infoRequestsPendingCount;
    private List<SubmissionSummaryDto> _recentSubmissions = [];

    protected override async Task OnInitializedAsync()
    {
        await LoadDashboardDataAsync();
    }

    private async Task LoadDashboardDataAsync()
    {
        _loading = true;

        try
        {
            var result = await Mediator.Send(new GetSubmissionsQuery
            {
                Page = 1,
                PageSize = 10
            });

            if (result.IsSuccess && result.Value is not null)
            {
                _recentSubmissions = result.Value.Items.ToList();
                _pendingCount = result.Value.Items.Count(s => s.Status == "Received" || s.Status == "Scored");
                _inProgressCount = result.Value.Items.Count(s => s.Status == "UnderReview" || s.Status == "InformationRequested");
            }

            // Mock data for demo purposes - these would come from dedicated queries
            _quotedTodayCount = 3;
            _avgResponseTime = "4.2h";
            _submissionsTodayCount = 12;
            _declinedTodayCount = 2;
            _infoRequestsPendingCount = 5;
        }
        finally
        {
            _loading = false;
        }
    }

    private void ViewSubmission(Guid id)
    {
        // Navigation handled by link
    }

    private string GetScoreBadgeClass(int? score) => score switch
    {
        >= 80 => "bg-success",
        >= 60 => "bg-warning text-dark",
        >= 40 => "bg-secondary",
        _ => "bg-danger"
    };

    private string GetStatusBadgeClass(string status) => status switch
    {
        "Received" => "bg-info",
        "Scored" => "bg-primary",
        "UnderReview" => "bg-warning text-dark",
        "Quoted" => "bg-success",
        "Declined" => "bg-danger",
        "InformationRequested" => "bg-secondary",
        _ => "bg-light text-dark"
    };

}
