@page "/routing-rules"
@attribute [Authorize]
@using MediatR
@using Vector.Application.Routing.DTOs
@using Vector.Application.Routing.Queries
@using Vector.Domain.Routing.Enums
@inject IMediator Mediator
@inject NavigationManager Navigation

<PageTitle>Routing Rules - Vector Admin</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1>Routing Rules</h1>
            <p class="text-muted">
                Configure automated routing rules that assign submissions to underwriters.
            </p>
        </div>
        <div class="col-auto">
            <a href="/routing-rules/create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> New Rule
            </a>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <select class="form-select" @onchange="OnStatusFilterChanged">
                <option value="">Active Rules</option>
                <option value="Draft">Draft</option>
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
                <option value="Archived">Archived</option>
            </select>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (rules.Count == 0)
    {
        <div class="alert alert-info">
            <strong>No routing rules found.</strong>
            @if (statusFilter is not null)
            {
                <span>Try changing the status filter or </span>
            }
            <a href="/routing-rules/create">create your first routing rule</a>.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Priority</th>
                        <th>Name</th>
                        <th>Strategy</th>
                        <th>Target</th>
                        <th>Conditions</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rule in rules.OrderBy(r => r.Priority))
                    {
                        <tr>
                            <td><strong>@rule.Priority</strong></td>
                            <td>
                                <a href="/routing-rules/@rule.Id">
                                    <strong>@rule.Name</strong>
                                </a>
                                @if (!string.IsNullOrEmpty(rule.Description))
                                {
                                    <br />
                                    <small class="text-muted">@TruncateDescription(rule.Description)</small>
                                }
                            </td>
                            <td>
                                <span class="badge @GetStrategyBadgeClass(rule.Strategy)">
                                    @rule.Strategy
                                </span>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(rule.TargetUnderwriterName))
                                {
                                    <i class="bi bi-person me-1"></i> @rule.TargetUnderwriterName
                                }
                                else if (!string.IsNullOrEmpty(rule.TargetTeamName))
                                {
                                    <i class="bi bi-people me-1"></i> @rule.TargetTeamName
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>@rule.ConditionCount condition(s)</td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(rule.Status)">
                                    @rule.Status
                                </span>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="/routing-rules/@rule.Id" class="btn btn-outline-primary" title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private IReadOnlyList<RoutingRuleSummaryDto> rules = [];
    private bool isLoading = true;
    private RoutingRuleStatus? statusFilter;

    protected override async Task OnInitializedAsync()
    {
        await LoadRules();
    }

    private async Task LoadRules()
    {
        isLoading = true;
        try
        {
            var query = new GetRoutingRulesQuery(statusFilter);
            rules = await Mediator.Send(query);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task OnStatusFilterChanged(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        statusFilter = string.IsNullOrEmpty(value)
            ? null
            : Enum.Parse<RoutingRuleStatus>(value);
        await LoadRules();
    }

    private static string GetStatusBadgeClass(string status) => status switch
    {
        "Draft" => "bg-secondary",
        "Active" => "bg-success",
        "Inactive" => "bg-warning text-dark",
        "Archived" => "bg-dark",
        _ => "bg-light text-dark"
    };

    private static string GetStrategyBadgeClass(string strategy) => strategy switch
    {
        "Direct" => "bg-primary",
        "ProducerPairing" => "bg-info",
        "RoundRobin" => "bg-success",
        "LoadBalanced" => "bg-warning text-dark",
        "SpecialtyBased" => "bg-purple text-white",
        "ManualQueue" => "bg-secondary",
        _ => "bg-light text-dark"
    };

    private static string TruncateDescription(string description)
    {
        const int maxLength = 80;
        return description.Length > maxLength
            ? description[..maxLength] + "..."
            : description;
    }
}
